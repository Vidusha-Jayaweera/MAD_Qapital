<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="7dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E1E1E1"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/bg_expense_image"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="3dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/tvExpenseTitle"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="left"
                android:hint="Name"
                android:textColor="@color/redExpense"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvExpenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="right"
                android:hint="99999.99"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvExpenseDate"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="right"
                android:hint="31/12/2022"
                android:textColor="#606060"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvExpenseCategory"
                android:layout_width="219dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_marginRight="96dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="left"
                android:hint="Category"
                android:textColor="#606060"
                android:textSize="14sp" />


        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>