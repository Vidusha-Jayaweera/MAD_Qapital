<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    tools:context=".activities.IncomeUpdateActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:background="@color/white">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amountTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etIncomeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeRadioGroup"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/amountTIL"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etIncomeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uamount"
                android:drawableLeft="@drawable/ic_baseline_title_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Title"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/categoryTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/titleTIL"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etIncomeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Type"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/categoryTIL"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etIncomeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryTIL"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"
                android:textColor="#717171"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/noteTIL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTIL"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etIncomeNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wamounto"
                android:drawableLeft="@drawable/ic_baseline_notes_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Note"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/IncomeSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/noteTIL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/toscaSecondary"
            android:paddingHorizontal="30dp"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="20dp" />


    </RelativeLayout>


</RelativeLayout>