<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    tools:context=".activities.IncomeDetailsActivity">

    <RelativeLayout
        android:id="@+id/transactionDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/baseline_clear_24"
                android:contentDescription="@string/btn_back" />

            <ImageButton
                android:id="@+id/deleteIncomeData"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@drawable/baseline_delete_24"
                android:contentDescription="@string/btn_delete" />

            <ImageButton
                android:id="@+id/updateIncomeData"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@drawable/baseline_edit_24"
                android:contentDescription="@string/btn_edit" />

        </Toolbar>

        <TextView
            android:id="@+id/titleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="31dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/txt_expense_details"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="@string/detail" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/LinearLayoutTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transactionDetailsTitle"
        android:layout_alignBottom="@+id/transactionDetailsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-88dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/bg_rounded_amount"
        android:elevation="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@drawable/profits_graph_svgrepo_com" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvIncomeDateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_vertical"
                android:textColor="#606060"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIncomeTypeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvIncomeDateDetails"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="start"
                android:text="Income"
                android:textColor="#474747"
                android:textSize="15sp"
                tools:text="@string/income" />

            <TextView
                android:id="@+id/amountTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIncomeTypeDetails"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/txt_transaction_amount"
                android:textColor="#979797"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvIncomeAmountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amountTitle"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="start"
                android:textColor="#515151"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LinearLayoutTransaction"
        android:layout_alignParentBottom="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <RelativeLayout
        android:id="@+id/Incomeinformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/transactionDetailsTitle"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="80dp">

        <TextView
            android:id="@+id/titleIncomeInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/txt_transaction_information"
            android:textColor="#606060"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIncomeTitleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleIncomeInformation"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_baseline_title_36"
            android:drawablePadding="25dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:textColor="#606060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvIncomeCategoryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncomeTitleDetails"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_baseline_format_list_bulleted_36"
            android:drawablePadding="25dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:textColor="#606060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/IncomenoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncomeCategoryDetails"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_baseline_notes_24"
            android:drawablePadding="25dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:text="Note : "
            android:textColor="#606060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvIncomeNoteDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/IncomenoteTitle"
            android:layout_marginLeft="59dp"
            android:drawablePadding="25dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_vertical"
            android:textColor="#939393"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>